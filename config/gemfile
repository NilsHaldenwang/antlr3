# main is a command-line app builder library used in the scripts
gem "main", "4.2.0"

# console based user interface utilities
gem 'highline', "1.5.1"

# a big bag of bric-a-brac 
gem "facets", "2.7.0"

gem 'rubyforge'
gem 'gemcutter'

gem 'rake', "0.8.7"
gem 'rdoc', "2.4.3"

# antlr tests use a rspec environment with a test/unit structure
gem "rspec", "1.1.11"

# code coverage
gem "rcov", "0.9.6"

# fast code profiling
gem "ruby-prof", "0.7.3"

# textile markup for documentation
gem "RedCloth", "4.2.2"

# HTML parsing
gem "hpricot", "0.8.2"

# where the gem libs go
bundle_path '../vendor'

# where the gem executables go
bin_path '../vendor/bin'

# turns off rubygems in code
#disable_rubygems
disable_system_gems