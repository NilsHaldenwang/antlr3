# main is a command-line app builder library used in the scripts
gem "main"

# console based user interface utilities
gem 'highline'

# a big bag of bric-a-brac 
gem "facets", "2.7.0"

gem 'rake', "0.8.7"

# antlr tests use a rspec environment with a test/unit structure
gem "rspec", "1.1.11"

# code coverage
gem "rcov"

# fast code profiling
gem "ruby-prof"

# textile markup for documentation
gem "RedCloth"

# where the gem libs go
bundle_path '../vendor'

# where the gem executables go
bin_path '../vendor/bin'

# turns off rubygems in code
disable_system_gems