#!/usr/bin/ruby
# encoding: utf-8

require 'antlr3'
require 'hoe'

Hoe.spec <%= name.dump %> do
  self.version = ANTLR3::VERSION_STRING
  self.rubyforge_name = <%= rubyforge_project.dump %>
  
  developer <%= author.dump %>, <%= email.dump %>
  
  spec_extras.update(
    :required_ruby_version => <%= required_ruby_version.dump %>
  )
  
  self.test_globs = [
    <%= ( unit_tests + functional_tests ).map { | i | i.dump }.join( ",\n    " ) %>
  ]
  
end
